NameVirtualHost *:80
<VirtualHost *:80>

        ServerName your.domain.here
        ServerAlias your.domain.here
        ServerAdmin your@email.com
        DocumentRoot /var/www/downloader/public

        RewriteEngine On
        RewriteLog /var/log/apache2/rewrite.log
        RewriteLogLevel 0

        RewriteCond %{REQUEST_FILENAME} !-d [OR]
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteRule ^/([^/]+)/([^/]+)/([0-9]+)$ /$1.php?type=$1&action=$2&id=$3 [PT,L]
        RewriteRule ^/([^/]+)/([a-z]+)$ /$1.php?type=$1&action=$2 [PT,L]

        <Directory />
                Options FollowSymLinks MultiViews
                AllowOverride All
        	Order allow,deny
		Allow from all
	</Directory>

        ErrorLog /var/log/apache2/chown.me_error_log

        # Possible values include: debug, info, notice, warn, error, crit,
        # alert, emerg.
        LogLevel warn

        CustomLog /var/log/apache2/chown.me_access_log combined

</VirtualHost>


